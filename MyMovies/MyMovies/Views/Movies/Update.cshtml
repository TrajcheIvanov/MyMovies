@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model MyMovies.ViewModels.MovieUpdateModel

@{
    ViewBag.Title = "Edit Movie";
}

<form asp-controller="Movies" asp-action="Update" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label class="control-label" asp-for="Title"> <b>  Title</b> </label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Genre"><b>Genre  </b> </label>
        <input type="text" asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Stars"><b> Stars </b> </label>
        <input type="text" asp-for="Stars" class="form-control" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ImgUrl"><b> ImgUrl </b> </label>
        <input type="text" asp-for="ImgUrl" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="MovieTypeId">Movie type</label>
        <select asp-for="MovieTypeId" class="form-control">
            @foreach (var movieType in Model.MovieTypes)
             {
                <option value="@movieType.Id">@movieType.Name</option>          
             }
        </select>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Storyline"><b> Storyline </b>  </label>
        <textarea type="text" asp-for="Storyline" class="form-control" cols="20" rows="5"></textarea>
        <span asp-validation-for="Storyline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Movie" class="btn btn-warning" />
    </div>
</form>