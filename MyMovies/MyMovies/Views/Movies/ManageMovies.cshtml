@model List<MyMovies.Models.Movie>

@{
    ViewBag.Title = "Manage movies";
}

<br />
<br />
@if (ViewBag.ErrorMessage != null)
 {
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
 }

@if (ViewBag.SuccessMessage != null)
 {
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
 }

@if (ViewBag.UpdateMEssage != null)
 {
    <div class="alert alert-warning" role="alert">
        @ViewBag.UpdateMEssage
    </div>
 }
	

<p>
    <a href="/Movies/Create " class="btn btn-success">Create</a>
</p>


@if (Model.Count() == 0)
{
    <p> No Movies :-( </p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Last</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td>
                        <a href="/Movies/Edit/@movie.Id" class="text-primary">Edit</a> |
                        <a href="/Movies/Delete/@movie.Id" class="text-danger">Delete</a>

                    </td>
                </tr>
            }


        </tbody>
    </table>
}

